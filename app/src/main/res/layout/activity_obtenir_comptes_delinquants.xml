<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".obtenirComptesDelinquants">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obtenir la liste des comptes délinquants!" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Obtenir les comptes délinquants"
        android:id="@+id/obtenirComptesDelinquants"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listViewComptesDelinquants">
    </ListView>
</android.widget.LinearLayout>